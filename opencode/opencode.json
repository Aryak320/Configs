{
  "$schema": "https://opencode.ai/config.json",
  
  "keybinds": {
    "leader": "ctrl+d",
    
    // ============================================
    // SESSION NAVIGATION (VIM-LIKE WITH LEADER)
    // ============================================
    
    "session_child_cycle": "<leader>j",
    "session_child_cycle_reverse": "<leader>k",
    "session_list": "<leader>s",
    
    // ============================================
    // MESSAGE NAVIGATION (VIM-LIKE)
    // ============================================
    
    "messages_half_page_down": "alt+j",
    "messages_half_page_up": "alt+k",
    "messages_last": "<leader>l",
    "messages_first": "<leader>h",
    "messages_toggle_conceal": "none",
    
    // ============================================
    // INPUT EDITING (UPDATED PER REQUIREMENTS)
    // ============================================
    
    // Remove ctrl+j from newline (conflicts with navigation)
    "input_newline": "shift+return,ctrl+return,alt+return",
    
    // Disable ctrl+d delete (now used as leader key)
    "input_delete": "delete,shift+delete",
    
    // ============================================
    // VIM-LIKE EDITING (PHASE 1: CORE NAVIGATION)
    // ============================================
    
    // Core navigation (h/j/k/l) - using alt instead of leader to avoid conflicts
    "input_move_left": "left,ctrl+b,alt+h",
    "input_move_down": "down,alt+j",
    "input_move_up": "up,alt+k",
    "input_move_right": "right,ctrl+f,alt+l",
    
    // Line navigation (0/$)
    "input_line_home": "ctrl+a,alt+0",
    "input_line_end": "ctrl+e,alt+4",
    
    // Buffer navigation (gg/G)
    "input_buffer_home": "home,alt+g",
    "input_buffer_end": "end,alt+shift+g",
    
    // ============================================
    // VIM-LIKE EDITING (PHASE 2: WORD MOVEMENT)
    // ============================================
    
    // Word movement (w/b/e)
    "input_word_forward": "alt+f,alt+right,ctrl+right,alt+w,alt+e",
    "input_word_backward": "alt+b,alt+left,ctrl+left",
    
    // ============================================
    // VIM-LIKE EDITING (PHASE 3: DELETION)
    // ============================================
    
    // Character deletion (x/X)
    "input_backspace": "backspace,shift+backspace,alt+shift+x",
    
    // Word deletion (dw/db)
    "input_delete_word_forward": "alt+d,alt+delete,ctrl+delete",
    "input_delete_word_backward": "ctrl+w,ctrl+backspace,alt+backspace",
    
    // Line deletion (dd/D/d0)
    "input_delete_line": "ctrl+shift+d",
    "input_delete_to_line_end": "ctrl+k",
    "input_delete_to_line_start": "ctrl+u",
    
    // ============================================
    // VIM-LIKE EDITING (PHASE 4: VISUAL MODE)
    // ============================================
    
    // Visual mode approximation (v + movement)
    "input_select_left": "shift+left,alt+v,h",
    "input_select_down": "shift+down,alt+v,j",
    "input_select_up": "shift+up,alt+v,k",
    "input_select_right": "shift+right,alt+v,l",
    
    // Visual word selection (vw/vb)
    "input_select_word_forward": "alt+shift+f,alt+shift+right",
    "input_select_word_backward": "alt+shift+b,alt+shift+left",
    
    // Visual line selection (v0/v$)
    "input_select_line_home": "ctrl+shift+a",
    "input_select_line_end": "ctrl+shift+e",
    "input_select_buffer_home": "shift+home",
    "input_select_buffer_end": "shift+end",
    
    // ============================================
    // VIM-LIKE EDITING (PHASE 5: UNDO/REDO)
    // ============================================
    
    // Input undo/redo (vim-style)
    "input_undo": "ctrl+-,super+z",
    "input_redo": "ctrl+.,super+shift+z",
    
    // ============================================
    // OPENCODE NATIVE KEYBINDINGS (PRESERVED)
    // ============================================
    
    // Session management
    "session_new": "<leader>n",
    "session_timeline": "<leader>g",
    "session_interrupt": "escape",
    "session_compact": "<leader>c",
    "session_export": "<leader>x",
    
    // Message operations
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "messages_page_up": "pageup",
    "messages_page_down": "pagedown",
    
    // UI toggles
    "sidebar_toggle": "<leader>b",
    "theme_list": "<leader>t",
    
    // Model and agent selection
    "model_list": "<leader>m",
    "agent_list": "<leader>a",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    
    // Commands
    "command_list": "ctrl+p",
    
    // Input control
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "return",
    
    // Application control
    "app_exit": "ctrl+c,<leader>q",
    "editor_open": "<leader>e"
  },
  
  "autoupdate": true
}
